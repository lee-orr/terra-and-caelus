{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run",
            "type": "shell",
            "command": "cargo run"
        },
        {
            "label": "Watch",
            "type": "shell",
            "command": "cargo watch -d 2 -x run"
        },
        {
            "label": "Run Wasm",
            "type": "shell",
            "command": "trunk serve"
        },
        {
            "label": "Format",
            "type": "shell",
            "command": "cargo clippy --fix --allow-dirty && cargo fmt"
        }
    ]
}