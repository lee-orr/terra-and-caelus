// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/typescript-node
{
	"name": "Terra and Caelus",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "ubuntu:latest",
	"features": {
		"ghcr.io/devcontainers/features/rust:1": {},
		"ghcr.io/devcontainers/features/git:1": {},
		"ghcr.io/lee-orr/rusty-dev-containers/cargo-binstall:latest": {},
		"ghcr.io/lee-orr/rusty-dev-containers/cargo-watch:latest": {},
		"ghcr.io/lee-orr/rusty-dev-containers/bacon:latest": {},
		"ghcr.io/lee-orr/rusty-dev-containers/mprocs:latest": {},
		"ghcr.io/lee-orr/rusty-dev-containers/wasm-bindgen-cli:latest": {},
		"ghcr.io/lee-orr/rusty-dev-containers/wasm-server-runner:latest": {},
		"ghcr.io/lee-orr/rusty-dev-containers/wasm32-unknown-unknown:latest": {},
		"ghcr.io/rocker-org/devcontainer-features/apt-packages:1": {
			"packages": "g++,pkg-config,libx11-dev,libasound2-dev,libudev-dev"
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"bungcip.better-toml",
				"panicbit.cargo",
				"serayuzgur.crates",
				"JScearcy.rust-doc-viewer",
				"rust-lang.rust-analyzer",
				"github.vscode-github-actions",
				"spencerwmiles.vscode-task-buttons",
				"ritwickdey.LiveServer"
			]
		}
	}
}